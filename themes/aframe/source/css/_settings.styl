// Font faces
$body-font = Fira Sans, Helvetica, Arial, sans-serif
$code-font = Fira Mono, Consolas, Andale Mono, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace

$logo-font = $body-font
$mono-font = $code-font

// Font sizes
$html-font-size = 14px
$body-font-size = 1.1rem
$body-font-weight = 400
$body-line-height = 1.6
$table-heading-font-size = .9rem
$table-body-font-size = .9rem

// Colors
$color-primary = #EF2D5E  // A-Frame Pink.
$color-secondary = #24CAFF // A-Frame Light Blue.
$color-text-white = #FAFAFA

$dark = #2c3e50
$fair = lighten(#2c3e50, 20%)
$medium = #333
$light = #7f8c8d
$green = #4b8
$green-dark = darken(#4b8, 30%)
$blue = #48b
$blue-dark = darken(#48b, 30%)
$border = #ddd
$border-dark = #bbb
$codebg = #f8f8f8
$red = #f66
$white = #FDFDFD
$pink = rgb(239,45,94)

$copy-link = #1497B8  // hsl(192, 80%, 40%)
$copy-link-hover = #35c5e9  // hsl(192, 80%, 56%)

// Miscellaneous
$radius = 2px

media--mobile-device() {
  [data-is-mobile="true"] {
    {block}
  }
}

media--768() {
  @media (min-width: 768px) {
      {block}
  }
}

media--desktop() {
  @media (min-width: 900px) {
      {block}
  }
}
